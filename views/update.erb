<h2>Update "<%=@find_project.title() %>" </h2>

<form action="/projects/<%= @find_project.id() %>" method="post" class="form-container">
  <input name="_method" type="hidden" value="patch">
  <label for="title">Title:</label>
  <input id="title" name="title" required type="text" class="form-control">
  <br>
  <button type="submit" name="button" class="btn btn-primary" id="updatebutton">Update Project</button>
</form>
<br>
<form action="/projects/<%= @find_project.id()%>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-primary" id="updatebutton">Delete Project</button>
</form>
